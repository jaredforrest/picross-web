{
    "include": [
        "./src/*"
    ],
    "exclude" : [
        "./node_modules/"
    ],
    "compilerOptions": {
        "outDir": "./builds",
        "lib": [
            "esnext",
            "dom"
        ],
        "target":"ESNext",
        "module": "esnext",
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": true,
        "strict": true,
        "strictNullChecks": true,
        "exactOptionalPropertyTypes": true,
        "alwaysStrict": true,
        "allowJs": true,
        "checkJs": true

    }
}
